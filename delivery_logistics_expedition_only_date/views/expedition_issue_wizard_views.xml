<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_expedition_issue_wizard_form" model="ir.ui.view">
        <field name="name">delivery.expedition.issue.wizard.form</field>
        <field name="model">delivery.expedition.issue.wizard</field>
        <field name="arch" type="xml">
            <form string="Problem / Hold">
                <group>
                    <field name="expedition_id" />
                    <field name="issue_kind" />
                    <field name="note" placeholder="Describe the problem or reason for hold..." />
                </group>
                <footer>
                    <button name="action_apply" type="object" string="Save" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>